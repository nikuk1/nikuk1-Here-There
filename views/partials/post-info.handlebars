<div class="card">
    <div class="card-header">
       <h4 class="text-align-center"><a class="link" href="/post/{{id}}">{{title}}</a></h4>
       <div class="flex-row justify-space-around align-center p-2">
            <img src="{{city_image}}" style="max-width:50%;"></img>
            <div>
                <p>City: {{city_name}}<p>
                <p>Posted by {{user.username}} on {{format_date created_at}}</p>
            </div>
        </div>
    </div>
        <p class="card-body">{{content}}</p>
</div>